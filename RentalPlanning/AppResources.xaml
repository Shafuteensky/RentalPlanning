<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <!-- Load WinUI resources -->
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
        <MaterialToolkitTheme xmlns="using:Uno.Toolkit.UI.Material"
			ColorOverrideSource="ms-appx:///RentalPlanning/Styles/ColorPaletteOverride.xaml"
			FontOverrideSource="ms-appx:///RentalPlanning/Styles/MaterialFontsOverride.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="Background" Value="Red"/>
        <Setter Property="Margin" Value="6"/>
    </Style>

    <Style TargetType="Grid" x:Key="RedGrid">
        <Setter Property="Background" Value="#FF7B848C"/>
    </Style>

</ResourceDictionary>
